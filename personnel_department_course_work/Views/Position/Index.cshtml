@using personnel_department_DB.Models;
@model List<Position>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var position in @Model)
        {
            <tr>
                <th class="w-50">@position.Name</th>
                <td><a class="btn btn-primary" asp-route-id="@position.Id" asp-controller="position" asp-action="Edit">Изменить</a></td>
                <td><a class="btn btn-danger" asp-route-id="@position.Id" asp-controller="position" asp-action="Delete">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-controller="Position" asp-action="Add">Добавить</a>